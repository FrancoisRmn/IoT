{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "src/*":["src/*"],
            "*": [
                "node_modules/*"
            ]
        },
        "rootDirs": ["src"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests/**/*.ts"
    ]
}